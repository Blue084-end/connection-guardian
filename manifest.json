{
  "manifest_version": 2,
  "name": "Connection Guardian",
  "version": "1.0",
  "description": "Giám sát và kiểm soát mọi kết nối trên Firefox",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
